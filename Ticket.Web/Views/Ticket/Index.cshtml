@model IEnumerable<Ticket.Domain.Models.TicketModel>
@using Ticket.Domain.Enum 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tickets</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="container border rounded shadow">
    <div class="row font-weight-bold text-center bg-dark text-white">
        <div class="col p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="col border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.ValidUntil)
        </div>
        <div class="col border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.Genre)
        </div>
        <div class="col-1 border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.Price)
        </div>
        <div class="col-1 border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.Seats)
        </div>
        <div class="col-1 border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            @Html.DisplayNameFor(model => model.In3D)
        </div>
        <div class="col-3 border-left p-2 border-white rounded d-flex flex-row justify-content-center align-items-center">
            <form class="h-100" method="post" asp-action="Index">
                <div class="form-group input-group-append m-0">
                    <label for="term" class="control-label"></label>
                    <input name="term" type="date" class="form-control" />
                    <div class="input-group-append">
                        <button class="btn btn-primary">
                            <i>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </i>
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row text-center border-bottom">
            <div class="col p-2 d-flex justify-content-center align-items-center">
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </div>
            <div class="col p-2 d-flex justify-content-center align-items-center">
                @Html.DisplayFor(modelItem => item.ValidUntil)
            </div>
            <div class="col p-2 d-flex justify-content-center align-items-center">
                @(char.ToUpper(item.Genre.ToString()[0]) + item.Genre.ToString().ToLower().Substring(1))
            </div>
            <div class="col-1 p-2 d-flex justify-content-center align-items-center">
                @Html.DisplayFor(modelItem => item.Price) MKD
            </div>
            <div class="col-1 p-2 d-flex justify-content-center align-items-center">
                @Html.DisplayFor(modelItem => item.Seats)
            </div>
            <div class="col-1 p-2 d-flex justify-content-center align-items-center">
                @Html.DisplayFor(modelItem => item.In3D)
            </div>
            <div class="col-3 p-2 d-flex justify-content-around align-items-center">
                <a class="btn btn-primary" asp-action="AddCart" asp-route-id="@item.Id">Add To Cart</a>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>

